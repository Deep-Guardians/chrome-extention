{
    "manifest_version": 3,
    "name": "TruthGuard",
    "description": "Upload and transform images to grayscale with ease.",
    "version": "1.0",
    "icons": {
      "16": "images/16.png",
      "32": "images/32.png",
      "48": "images/48.png",
      "128": "images/128.png"
    },
    "permissions": [
      "activeTab",
      "scripting",
      "storage",
      "clipboardWrite"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/16.png",
        "32": "images/32.png",
        "48": "images/48.png"
      }
    }
  }